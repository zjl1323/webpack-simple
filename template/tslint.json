{
  "extends": "tslint-config-standard",
  "globals": {
    "require": true
  },
  "rules": {
    // 必须使用单引号，jsx 中必须使用双引号
    "quotemark": [
      true,
      "double",
      "jsx-double",
      "avoid-template",
      "avoid-escape"
    ],
    // 行尾必须有分号
    "semicolon": [
      true,
      "always",
      "ignore-interfaces"
    ]
  }
}
